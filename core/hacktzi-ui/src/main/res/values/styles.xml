<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button -->
    <style name="Widget.Hacktzi.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?colorTextButton</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Hacktzi.Button.Primary">
        <item name="backgroundTint">@color/button_primary_colored</item>
    </style>
</resources>